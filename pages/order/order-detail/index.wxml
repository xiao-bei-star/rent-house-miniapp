<!--pages/order/order-detail/index.wxml-->
<view class='container'>
  <view class="weui-form-preview">
    <view class="weui-form-preview__hd">
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">付款金额</view>
        <view class="weui-form-preview__value_in-hd">¥{{totalAmount}}</view>
      </view>
    </view>
    <view class="weui-form-preview__bd">
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">订单编号</view>
        <view class="weui-form-preview__value">{{order.orderNumber}}</view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">租赁时间</view>
        <view class="weui-form-preview__value">{{order.startDate}}</view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">订单状态</view>
        <view class="weui-form-preview__value">
          <block wx:if="{{order.orderStatus == 0}}">
            <label class="status-0">已取消</label>
          </block>
          <block wx:if="{{order.orderStatus == 1}}">
            <label class="status-1">租赁中</label>
          </block>
          <block wx:if="{{order.orderStatus == 2}}">
            <label class="status-2">已退租</label>
          </block>
        </view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">下单时间</view>
        <view class="weui-form-preview__value">{{order.createTime}}</view>
      </view>
    </view>
  </view>

  <view class="weui-panel weui-panel_access">
    <view class="weui-panel__hd">订单房屋</view>
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_appmsg" wx:for="{{order.orderCarList}}" wx:key="index">
        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
          <image class="weui-media-box__thumb" src="{{picturl}}{{item.picUrl}}" />
        </view>
        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
          <view class="weui-media-box__title car-name">{{item.carName}}</view>
          <view class='weui-flex'>
            <view class="weui-flex__item price">￥{{item.price}}</view>
            <view class="buy-num">X{{item.num}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="weui-btn-area">
    <button type="primary" class="weui-btn" bindtap="pay">去支付</button>
  </view>
  
</view>