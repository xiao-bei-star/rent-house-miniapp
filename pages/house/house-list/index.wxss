/* pages/car/car-list/index.wxss */
.weui-grids{
  border: none;
}

.weui-grid{
  border: none;
}

.car-container{
  padding: 5rpx;
}

.weui-grid.car{
  width: 360rpx;
  background: #FFFFFF;
  margin: 5rpx;
  padding: 0rpx;
}

.weui-grid__icon.car{
  width: 360rpx;
  height: 360rpx;
}

.weui-grid__label.car{
  text-align: left;
  padding-left: 5rpx;
}

.weui-grids .price{
  text-align: left;
  font-size: 26rpx;
  color: #e64340
}

.list{
  padding: 6rpx;
  border-bottom: 1rpx solid #ddd;
  background: #fff;
}

.time{
  font-size: 28rpx;
  color: #555;
}

.list .weui-grid__label{
  width: 200rpx;
  text-align: left;
  margin: 0 auto;
}

.car-img{
  width: 200rpx;
  height: 200rpx;
  margin: 0rpx;
  margin-right: 10rpx;
}
