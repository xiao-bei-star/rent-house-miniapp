/* pages/house/house-detail/index.wxss */

.container{
  padding-bottom: 100rpx;
  position: relative;
}

swiper{
  height: 550rpx;
}

.slide-image{
  width: 750rpx;
  height: 550rpx;
}

.house-name {
  text-align: center;
  font-weight: 700;
}

.house-time {
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.home-price{
  text-align: center;
  margin-top: 10rpx;
  color: #e64340;
  font-weight: 700;
  font-size: 38rpx;
}

.house-type{
  font-size: 26rpx;
  border-radius: 25rpx;
  padding: 8rpx 15rpx;
  border: 1rpx solid #999;
  margin: 0rpx 8rpx;
}

.house-tab{
  margin-top: 30rpx;
  border-top: 1rpx solid #999;
  padding: 30rpx 0rpx;
}

.houst-nodes{
  margin: 0rpx 20rpx;
  color: rgb(85, 82, 82);
}

.wxParse-p{
  overflow: hidden
}

.footer-box .shop-houset-btn {
  position: relative;
  width: 150rpx;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  padding-top: 26rpx;
  font-size: 20rpx;
  color: #acacb7;
  box-sizing: border-box;
  background: url("https://app.wfuhui.com/images/houset.png") no-repeat center 21rpx;
  background-size: 44rpx auto;
}

.footer-box .shop-houset-btn .shop-num {
  position: absolute;
  color: #e64340;
  left: 90rpx;
  top: -20rpx;
}

.footer-box .join-shop-houset {
  text-align: center;
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  background-color: #ef8203;
  color: #fff;
  font-size: 34rpx;
}

.footer-box .now-buy {
  text-align: center;
  height: 100rpx;
  flex: 1;
  line-height: 100rpx;
  background-color: #00bfe0;
  color: #fff;
  font-size: 34rpx;
}

.footer-box .now-appoint {
  text-align: center;
  height: 100%;
  width: 50%;
  line-height: 100rpx;
  background-color: #e64340;
  color: #fff;
  font-size: 34rpx;
  border: none;
  border-radius: 0px;
}

button[class="now-appoint"]::after {
  border: 0;
}

.footer-box .telphone {
  text-align: center;
  height: 100%;
  width: 50%;
  line-height: 100rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 34rpx;
}

.house-info {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 15rpx;
}

.house-info .title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.fixed-bottom{
  position: fixed;
  width: 100%;
  bottom : 0;
  background-color: #fff;
}

.flex_item{
  display: flex;
  flex-direction: row;
  width: 70%;
  background-color: #ff7f7f;
  border-radius: 25rpx;
  color: #fff;
  font-weight: 700;
  margin-left: 150rpx;
}

.logo-img{
  width: 60rpx;
  height: 60rpx;
}

.btn-tocall{
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #fff;
  font-weight: 700;
  width: 50%;
  margin-left: 30rpx;
}

button:not([size='mini']) {
  width: auto !important
}

.time{
  font-size: 32rpx;
}